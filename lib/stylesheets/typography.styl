$h1-size = 32px;
$h2-size = 30px;
$title-font = 'a', Adobe Garamond Pro, Times New Romans, serif;
$details-font = 'b', Adobe Garamond Pro, Times New Romans, serif;
$subtitle-font = 'a', Adobe Garamond Pro, Times New Romans, serif;
$body-font = Lucida Grande, Helvetica, sans-serif;
$body-font-size = 14px;
$sub-body-font-size = 14px;
$paragraph-margin = 21px;
$list-item-margin = 13px;

html, body {
  background: $tan-1;
  text-align: left;
  font-family: $body-font;
  font-size: 0.8em;
  line-height: 0.75;
  overflow-x: hidden;
}

html, body {
  // TradeG
  font-family: $body-font;
  color: $grey-2;
}

